    <menuitem name="List" id="feed_me.menu_1_list" parent="feed_me.menu_1"
              action="feed_me.action_window"/>
    <menuitem name="Server to list" id="feed_me" parent="feed_me.menu_2"
              action="feed_me.action_server"/>
    -->
  </data>
</odoo>